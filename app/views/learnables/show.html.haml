- model_class = Learnable
= container do
  .page-header
    %h1= t '.title', :default => Learnable
  .fieldset
    %dl
      %dt.label.label-default= model_class.human_attribute_name(:title)
      %dd
        %pre.prettyprint= @learnable.title
      %dt.label.label-default= model_class.human_attribute_name(:body)
      %dd
        %pre.prettyprint= @learnable.body
  .form-group
    = link_to t('.back', :default => t("helpers.links.back")), |
      learnables_path, :class => 'btn btn-default'
    = link_to t('.edit', :default => t("helpers.links.edit")),     |
      edit_learnable_path(@learnable), :class => 'btn btn-default'
    = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
      learnable_path(@learnable),                                                                                  |
      :method => 'delete',                                                                                         |
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
      :class => 'btn btn-danger'
