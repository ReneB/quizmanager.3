<%- model_class = ContentImage -%>
<div class="page-header">
  <h1><%=t '.title', :default => ContentImage %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt>Question image:</dt>
    <dd><%= image_tag @content_image.question_image.url(:thumbnail) %></dt>
    <dt>Answer image:</dt>
    <dd><%= image_tag @content_image.answer_image.url(:thumbnail) %></dt>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              content_images_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_content_image_path(@content_image), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              content_image_path(@content_image),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

