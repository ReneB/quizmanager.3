<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => Question %></h1>
</div>

<div class="fieldset">
  <dl class="dl-horizontal">
    <div class='well'>
      <dt><%= model_class.human_attribute_name(:question_text) %></dt>
      <dd><%= @question.question_text %></dd>
    </div>
    <div class='well'>
      <dt><%= model_class.human_attribute_name(:answers) %></dt>
      <dd>
      <% @question.answers.each do |answer| %>
        <%= render answer %>
      <% end %>
      </dd>
    </div>
    <div class='well'>
      <dt><%= model_class.human_attribute_name(:topics) %></dt>
      <dd>
        <ul class='list-unstyled'>
        <% @question.categories.each do |category| -%>
          <li><%= category.title %></li>
        <% end -%>
        </ul>
      </dd>
    </div>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

